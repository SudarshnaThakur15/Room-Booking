{
  "name": "hotel-booking-backend",
  "version": "1.0.0",
  "description": "Hotel booking system backend",
  "main": "index.js",
  "bin": {
    "hotel-booking-backend": "./build.js"
  },
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "import-hotels": "node import_hotels.js",
    "build": "node scripts/build.js",
